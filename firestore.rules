rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Разрешаем аутентифицированным пользователям читать/писать свои документы
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Пример правил для игровых данных
    match /games/{gameId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
                    (resource == null || resource.data.players[request.auth.uid] != null);
    }
  }
} 